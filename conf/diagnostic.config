
// Job paramaters to set for this environment


params {
    max_memory = 250.GB
    max_cpus = 20
    max_time = 240.h
    maxMultiqcEmailFileSize = 25.MB

    g1k = "/work_ifs/ikmb_repository/references/g1k/GRCh38_NYGC/CCDG_13607_B01_GRM_WGS_2019-02-19.recalibrated_variants.ALL_autosomal.xGen_v2.vcf.gz"
    pops = "/work_ifs/ikmb_repository/references/g1k/GRCh38_NYGC/integrated_call_samples_v3.20130502.ALL.panel"
    admix_ref = "/work_ifs/ikmb_repository/references/g1k/GRCh38_NYGC/refPanel_g1k_grch38_autosomal_no-relations.txt"
    admix_freq = "/work_ifs/ikmb_repository/references/g1k/GRCh38_NYGC/refPanel_g1k_grch38_autosomal_no-relations.freqs"
}

// Resource manager settings

executor {
  queueSize=100
}

// Process setting

process {
  
  executor = 'slurm'
  queue = 'htc'
 
}

params.max_cpus = 24
params.max_ram = 250

singularity {
 enabled = true
 runOptions = "-B /work_ifs -B /mnt -B /scratch"
 cacheDir = "/work_ifs/ikmb_repository/singularity_cache"
}



