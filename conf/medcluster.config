
// Job paramaters to set for this environment

params {
	max_cpus = 24
	max_ram = 240
  g1k = "/work_beegfs/ikmb_repository/references/g1k/GRCh38/ALL.vcf.gz"
  pops = "/work_beegfs/ikmb_repository/references/g1k/GRCh38/integrated_call_samples_v3.20130502.ALL.panel"
}

// Resource manager settings

executor {
  queueSize=50
}

// Process setting

process {
  
  executor = 'slurm'
  queue = 'all'

}

singularity {
  enabled = true
  runOptions = "-B /work_beegfs -B /scratch"
  cacheDir = "/work_beegfs/ikmb_repository/singularity_cache"
}

